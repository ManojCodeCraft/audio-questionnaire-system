      font-weight: 400;
      opacity: 0.75;
      display: block;
      margin-top: 2px;
    }

    .nav-links {
      display: flex;
      gap: 16px;
      align-items: center;
    }

    .nav-btn {
      padding: 10px 22px;
      border-radius: 6px;
      font-weight: 600;
      cursor: pointer;
      text-decoration: none;
      transition: all 0.3s ease;
      border: none;
      font-size: 14px;
    }

    .nav-btn.login {
      background: transparent;
      color: white;
      border: 2px solid rgba(255, 255, 255, 0.35);
    }

    .nav-btn.login:hover {
      background: rgba(255, 255, 255, 0.12);
    }

    .nav-btn.signup {
      background: #f59e0b;
      color: #1f2937;
    }

    .nav-btn.signup:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.2);
    }

    /* ‚îÄ‚îÄ HERO ‚îÄ‚îÄ */
    .hero {
      background: linear-gradient(135deg, #0f4c81 0%, #1565a8 50%, #1e6db5 100%);
      color: white;
      padding: 100px 50px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .hero::before {
