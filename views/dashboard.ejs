    <!-- CREATE SURVEY MODAL -->
    <div id="createModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Create New Survey</h2>
                <span class="close-modal" onclick="closeCreateModal()">√ó</span>
            </div>

