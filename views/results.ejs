<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Survey Results - AI Insights</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.0/chart.umd.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', 'Segoe UI', system-ui, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: #1f2937;
        }

        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            color: #1f2937;
            padding: 20px 40px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .navbar h1 {
            font-size: 24px;
            font-weight: 700;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .back-btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 10px 24px;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .back-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 30px;
        }

        .survey-header {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
        }

        .survey-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 6px;
            background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        }

        .survey-title {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 16px;
            color: #1f2937;
        }

        .survey-meta {
            display: flex;
            gap: 24px;
            color: #6b7280;
            font-size: 14px;
            flex-wrap: wrap;
        }

        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 24px;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
        }

        .stat-label {
            font-size: 12px;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .stat-value {
            font-size: 36px;
            font-weight: 800;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .section {
            background: white;
            padding: 32px;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 24px;
            color: #1f2937;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .ai-analyze-btn {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            color: white;
            border: none;
            padding: 14px 28px;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 24px rgba(245, 158, 11, 0.3);
            font-size: 15px;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

        .ai-analyze-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 32px rgba(245, 158, 11, 0.4);
        }

        .ai-analyze-btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

        .theme-card {
            background: linear-gradient(135deg, #f8f9ff 0%, #f3f4f6 100%);
            padding: 24px;
            border-radius: 14px;
            margin-bottom: 16px;
            border-left: 6px solid #10b981;
            transition: all 0.3s ease;
        }

        .theme-card:hover {
            transform: translateX(4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        }

        .theme-name {
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 10px;
            font-size: 18px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .theme-badge {
            background: #10b981;
            color: white;
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 12px;
            font-weight: 600;
        }

        .theme-description {
            color: #4b5563;
            margin-bottom: 14px;
            font-size: 14px;
            line-height: 1.6;
        }

        .keywords {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-top: 12px;
        }

        .keyword-tag {
            background: #dbeafe;
            color: #1e40af;
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        .chart-container {
            position: relative;
            height: 350px;
            margin: 24px 0;
            padding: 20px;
            background: #f9fafb;
            border-radius: 12px;
        }

        .response-card {
            background: linear-gradient(135deg, #f8f9ff 0%, #f3f4f6 100%);
            padding: 24px;
            border-radius: 14px;
            margin-bottom: 20px;
            border-left: 4px solid #667eea;
        }

        .response-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
            flex-wrap: wrap;
            gap: 10px;
        }

        .respondent-info {
            font-weight: 600;
            color: #1f2937;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .response-date {
            font-size: 12px;
            color: #9ca3af;
        }

        .question-answer {
            margin-bottom: 20px;
            padding: 16px;
            background: white;
            border-radius: 10px;
        }

        .question-text {
            font-weight: 600;
            color: #4c1d95;
            margin-bottom: 12px;
            font-size: 14px;
        }

        .answer-text {
            color: #374151;
            line-height: 1.7;
            padding: 12px;
            background: #f9fafb;
            border-radius: 8px;
            font-size: 14px;
            margin-top: 8px;
        }

        .answer-label {
            font-size: 11px;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
            display: block;
            margin-bottom: 6px;
        }

        .loading {
            text-align: center;
            padding: 60px;
            color: #6b7280;
        }

        .spinner {
            display: inline-block;
            width: 50px;
            height: 50px;
            border: 5px solid #f3f4f6;
            border-top-color: #667eea;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: 16px;
        }

        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        .empty-state {
            text-align: center;
            padding: 80px;
            color: #9ca3af;
        }

        .empty-icon {
            font-size: 64px;
            margin-bottom: 16px;
            filter: grayscale(0.5);
        }

        .insight-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 14px;
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            color: #92400e;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        @media (max-width: 768px) {
            .container {
                padding: 20px 15px;
            }

            .response-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .chart-container {
                height: 250px;
            }
        }
    </style>
</head>

<body>
    <div class="navbar">
        <h1>üìä Survey Results & AI Insights</h1>
        <a href="/dashboard" class="back-btn">‚Üê Back to Dashboard</a>
    </div>

    <div class="container">
        <div class="survey-header">
            <div class="survey-title" id="surveyTitle">Loading...</div>
            <div class="survey-meta">
                <span id="questionCount">üìù 0 questions</span>
                <span id="createdDate">üìÖ Created: --</span>
                <span class="insight-badge">ü§ñ AI-Powered Analysis</span>
            </div>
        </div>

        <div class="stats-row">
            <div class="stat-card">
                <div class="stat-label">Total Responses</div>
                <div class="stat-value" id="totalResponses">0</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Questions Asked</div>
                <div class="stat-value" id="totalQuestions">0</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Completion Rate</div>
                <div class="stat-value" id="responseRate">100%</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Avg Response Length</div>
                <div class="stat-value" id="avgLength">-</div>
            </div>
        </div>

        <!-- AI THEME ANALYSIS SECTION -->
        <div class="section" id="themesSection">
            <div class="section-title">
                üß† AI Theme Analysis (NVivo Coding)
            </div>
            <button class="ai-analyze-btn" id="analyzeBtn" onclick="analyzeThemes()">
                <span>ü§ñ</span> Analyze Themes with AI
            </button>

            <div id="themesContainer"></div>
            <div class="chart-container" id="themeChartContainer" style="display: none;">
                <canvas id="themeChart"></canvas>
            </div>
        </div>

        <!-- RESPONSE DISTRIBUTION CHART -->
        <div class="section">
            <div class="section-title">üìà Response Analytics</div>
            <div class="chart-container">
                <canvas id="responseChart"></canvas>
            </div>
        </div>

        <!-- INDIVIDUAL RESPONSES -->
        <div class="section">
            <div class="section-title">üí¨ Individual Responses</div>
            <div id="responsesContainer">
                <div class="loading">
                    <div class="spinner"></div>
                    <p>Loading responses...</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        let surveyId = '';
        let responses = [];
        let questionnaire = null;
        let themeChart = null;
        let responseChart = null;

        document.addEventListener('DOMContentLoaded', async () => {
            const pathParts = window.location.pathname.split('/');
            surveyId = pathParts[pathParts.length - 1];
            await loadResults();
        });

        async function loadResults() {
            const token = localStorage.getItem('token');

            if (!token) {
                window.location.href = '/login';
                return;
            }

            try {
                const response = await fetch(`/api/results/${surveyId}`, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                if (response.status === 401) {
                    window.location.href = '/login';
                    return;
                }

                if (response.status === 403) {
                    alert('You do not have permission to view these results.');
                    window.location.href = '/dashboard';
                    return;
                }

                const data = await response.json();

                if (!data.success) {
                    throw new Error(data.error || 'Failed to load results');
                }

                responses = data.responses || [];

                const surveyResponse = await fetch(`/api/questionnaires`, {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                const surveyData = await surveyResponse.json();
                questionnaire = surveyData.questionnaires.find(q => q._id === surveyId);

                if (questionnaire) {
                    document.getElementById('surveyTitle').textContent = questionnaire.title;
                    document.getElementById('questionCount').textContent = `üìù ${questionnaire.questions.length} questions`;
                    document.getElementById('createdDate').textContent = `üìÖ Created: ${new Date(questionnaire.createdAt).toLocaleDateString()}`;
                    document.getElementById('totalQuestions').textContent = questionnaire.questions.length;
                }

                // Update stats
                document.getElementById('totalResponses').textContent = responses.length;
                document.getElementById('responseRate').textContent = '100%';

                // Calculate average response length
                if (responses.length > 0) {
                    const totalWords = responses.reduce((sum, r) => {
                        return sum + r.responses.reduce((s, resp) => {
                            return s + (resp.normalized || '').split(' ').length;
                        }, 0);
                    }, 0);
                    const avgWords = Math.round(totalWords / responses.length);
                    document.getElementById('avgLength').textContent = `${avgWords}w`;
                }

                renderResponses();
                renderResponseChart();

            } catch (error) {
                console.error('Error loading results:', error);
                document.getElementById('responsesContainer').innerHTML = `
          <div class="empty-state">
            <div class="empty-icon">‚ö†Ô∏è</div>
            <p>Error loading results: ${error.message}</p>
          </div>
        `;
            }
        }

        function renderResponses() {
            const container = document.getElementById('responsesContainer');

            if (responses.length === 0) {
                container.innerHTML = `
          <div class="empty-state">
            <div class="empty-icon">üì≠</div>
            <p>No responses yet. Share your survey to start collecting feedback!</p>
          </div>
        `;
                return;
            }

            container.innerHTML = responses.map((response, idx) => `
        <div class="response-card">
          <div class="response-header">
            <div class="respondent-info">
              üë§ ${response.respondentName || response.respondentEmail}
            </div>
            <div class="response-date">
              ${new Date(response.submittedAt).toLocaleString()}
            </div>
          </div>

          ${response.responses.map(answer => `
            <div class="question-answer">
              <div class="question-text">Q: ${answer.questionText}</div>

              <span class="answer-label">Raw Transcription:</span>
              <div class="answer-text">${answer.transcription || 'N/A'}</div>

              <span class="answer-label">AI Cleaned Response:</span>
              <div class="answer-text">${answer.normalized || 'N/A'}</div>
            </div>
          `).join('')}
        </div>
      `).join('');
        }

        function renderResponseChart() {
            const ctx = document.getElementById('responseChart');

            // Create time-based response data
            const responseDates = responses.map(r => new Date(r.submittedAt));
            const dateGroups = {};

            responseDates.forEach(date => {
                const dateKey = date.toLocaleDateString();
                dateGroups[dateKey] = (dateGroups[dateKey] || 0) + 1;
            });

            const labels = Object.keys(dateGroups);
            const data = Object.values(dateGroups);

            responseChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Responses per Day',
                        data: data,
                        backgroundColor: 'rgba(102, 126, 234, 0.8)',
                        borderColor: 'rgba(102, 126, 234, 1)',
                        borderWidth: 2,
                        borderRadius: 8
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        title: {
                            display: true,
                            text: 'Response Timeline',
                            font: {
                                size: 16,
                                weight: 'bold'
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        }
                    }
                }
            });
        }

        async function analyzeThemes() {
            if (responses.length === 0) {
                alert('‚ö†Ô∏è No responses to analyze yet.');
                return;
            }

            const analyzeBtn = document.getElementById('analyzeBtn');
            const themesContainer = document.getElementById('themesContainer');

            analyzeBtn.disabled = true;
            analyzeBtn.innerHTML = '<span>üîÑ</span> Analyzing with AI...';

            themesContainer.innerHTML = `
        <div class="loading">
          <div class="spinner"></div>
          <p>AI is analyzing responses using NVivo coding methodology...</p>
        </div>
      `;

            const token = localStorage.getItem('token');

            try {
                const response = await fetch('/api/analyze-themes', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({ responses })
                });

                const data = await response.json();

                if (!data.success) {
                    throw new Error(data.error || 'Failed to analyze themes');
                }

                const themes = data.themes || [];

                if (themes.length === 0) {
                    themesContainer.innerHTML = `
            <div class="empty-state">
              <div class="empty-icon">ü§î</div>
              <p>No clear themes identified. Try collecting more responses.</p>
            </div>
          `;
                } else {
                    themesContainer.innerHTML = themes.map((theme, idx) => `
            <div class="theme-card">
              <div class="theme-name">
                <span>${['üéØ', 'üí°', '‚≠ê', 'üîç', 'üí¨', 'üìå', 'üöÄ', '‚ú®'][idx] || 'üìä'}</span>
                ${theme.name}
                <span class="theme-badge">${theme.count} mentions</span>
              </div>
              <div class="theme-description">${theme.description}</div>
              <div class="keywords">
                ${theme.keywords.map(kw => `<span class="keyword-tag">${kw}</span>`).join('')}
              </div>
            </div>
          `).join('');

                    // Render theme chart
                    renderThemeChart(themes);
                }

                analyzeBtn.innerHTML = '<span>üîÑ</span> Re-analyze Themes';
                analyzeBtn.disabled = false;

            } catch (error) {
                console.error('Error analyzing themes:', error);
                themesContainer.innerHTML = `
          <div class="empty-state">
            <div class="empty-icon">‚ö†Ô∏è</div>
            <p>Error analyzing themes: ${error.message}</p>
          </div>
        `;
                analyzeBtn.innerHTML = '<span>ü§ñ</span> Try Again';
                analyzeBtn.disabled = false;
            }
        }

        function renderThemeChart(themes) {
            const chartContainer = document.getElementById('themeChartContainer');
            chartContainer.style.display = 'block';

            const ctx = document.getElementById('themeChart');

            if (themeChart) {
                themeChart.destroy();
            }

            const colors = [
                'rgba(102, 126, 234, 0.8)',
                'rgba(139, 92, 246, 0.8)',
                'rgba(16, 185, 129, 0.8)',
                'rgba(245, 158, 11, 0.8)',
                'rgba(239, 68, 68, 0.8)',
                'rgba(59, 130, 246, 0.8)',
                'rgba(236, 72, 153, 0.8)',
                'rgba(34, 197, 94, 0.8)'
            ];

            themeChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: themes.map(t => t.name),
                    datasets: [{
                        data: themes.map(t => t.count),
                        backgroundColor: colors.slice(0, themes.length),
                        borderWidth: 2,
                        borderColor: '#fff'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                font: {
                                    size: 12,
                                    weight: 'bold'
                                }
                            }
                        },
                        title: {
                            display: true,
                            text: 'Theme Distribution',
                            font: {
                                size: 16,
                                weight: 'bold'
                            }
                        }
                    }
                }
            });
        }
    </script>
</body>

</html>