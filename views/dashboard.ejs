    <script>
        let surveys = [];
        let currentUser = null;
        let questionCount = 0;
        let autoRefreshInterval = null;

        document.addEventListener('DOMContentLoaded', () => {
            checkAuth();
            loadUserData();
            loadSurveys();
            startAutoRefresh();
        });

        function checkAuth() {
            const token = localStorage.getItem('token');
            const user = JSON.parse(localStorage.getItem('user') || '{}');

            if (!token || !user.email) {
                window.location.href = '/login';
                return;
            }

            currentUser = user;
            const firstName = user.name.split(' ')[0];
            document.getElementById('userName').textContent = user.name;
            document.getElementById('welcomeName').textContent = firstName;
            document.getElementById('userAvatar').textContent = firstName.charAt(0).toUpperCase();
        }

        function handleLogout() {
            clearInterval(autoRefreshInterval);
            localStorage.removeItem('token');
            localStorage.removeItem('user');
            window.location.href = '/login';
        }

        function startAutoRefresh() {
            // Refresh stats every 30 seconds
            autoRefreshInterval = setInterval(() => {
                loadSurveys();
            }, 30000);
        }

        async function loadUserData() {
            await loadSurveys();
        }

        async function loadSurveys() {
            const token = localStorage.getItem('token');
            try {
                const response = await fetch('/api/questionnaires', {
                    headers: {
                        'Authorization': `Bearer ${token}`
                    }
                });

                if (response.status === 401) {
                    handleLogout();
                    return;
                }

                const data = await response.json();
                surveys = data.questionnaires || [];

                // Update stats with animation
                animateValue('totalSurveys', surveys.length);
                animateValue('activeSurveys', surveys.filter(s => s.isActive).length);

                // Load total responses
                let totalResponses = 0;
                for (const survey of surveys) {
                    const res = await fetch(`/api/results/${survey._id}`, {
                        headers: {
                            'Authorization': `Bearer ${token}`
                        }
                    });
                    const data = await res.json();
                    totalResponses += data.responses?.length || 0;
                }
                animateValue('totalResponses', totalResponses);

                renderSurveys();
            } catch (error) {
                console.error('Error loading surveys:', error);
            }
        }

        function animateValue(id, target) {
            const element = document.getElementById(id);
            const current = parseInt(element.textContent) || 0;
            const increment = target > current ? 1 : -1;
            const duration = 500;
            const steps = Math.abs(target - current);
            const stepTime = steps > 0 ? duration / steps : 0;

            if (current === target) return;

            let value = current;
            const timer = setInterval(() => {
                value += increment;
                element.textContent = value;
                if ((increment > 0 && value >= target) || (increment < 0 && value <= target)) {
                    element.textContent = target;
                    clearInterval(timer);
                }
            }, stepTime);
        }

        function renderSurveys() {
            const container = document.getElementById('surveysContainer');

            if (surveys.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üìã</div>
                        <p>No surveys yet. Create your first survey to get started!</p>
                    </div>
                `;
                return;
            }

            container.innerHTML = surveys.map(s => `
                <div class="survey-card">
                    <div class="card-title">${s.title}</div>
                    <div class="card-desc">${s.description || 'No description provided'}</div>
                    <div class="card-meta">
                        <span>üìù ${s.questions.length} questions</span>
                        <span>${new Date(s.createdAt).toLocaleDateString()}</span>
                    </div>
                    <div class="card-actions">
                        <button class="action-btn-small view" onclick="viewResults('${s._id}')">üìä View Results</button>
                        <button class="action-btn-small share" onclick="shareLink('${s.link}')">üîó Share</button>
                    </div>
                </div>
            `).join('');
        }

        function openCreateModal() {
            document.getElementById('createModal').classList.add('active');
            document.getElementById('questionsContainer').innerHTML = '';
            questionCount = 0;
            addQuestion();
            addQuestion();
            addQuestion();
        }

        function closeCreateModal() {
            document.getElementById('createModal').classList.remove('active');
        }

        function addQuestion() {
            questionCount++;
            const container = document.getElementById('questionsContainer');
            const div = document.createElement('div');
            div.className = 'question-item';
            div.id = `q-${questionCount}`;
            div.innerHTML = `
                <span class="question-number">${questionCount}</span>
                <input type="text" placeholder="Enter your question..." class="question-input">
                <button class="remove-btn" onclick="removeQuestion('q-${questionCount}')" title="Remove question">√ó</button>
            `;
            container.appendChild(div);
            renumberQuestions();
        }

        function removeQuestion(id) {
            const container = document.getElementById('questionsContainer');
            if (container.children.length > 1) {
                document.getElementById(id).remove();
                renumberQuestions();
            } else {
                alert('‚ö†Ô∏è At least 1 question is required');
            }
        }

        function renumberQuestions() {
            const questions = document.querySelectorAll('.question-item');
            questions.forEach((q, index) => {
                const numberSpan = q.querySelector('.question-number');
                if (numberSpan) {
                    numberSpan.textContent = index + 1;
                }
            });
        }

        async function createSurvey() {
            const title = document.getElementById('surveyTitle').value.trim();
            const description = document.getElementById('surveyDesc').value.trim();
            const questionElements = Array.from(document.querySelectorAll('.question-input'));
            const questions = questionElements.map(q => q.value.trim()).filter(q => q.length > 0);

            if (!title) {
                alert('‚ö†Ô∏è Please enter a survey title');
                return;
            }

            if (questions.length < 3) {
                alert('‚ö†Ô∏è At least 3 questions are required');
                return;
            }

            const submitBtn = document.querySelector('.submit-btn');
            submitBtn.disabled = true;
            submitBtn.textContent = 'Creating Survey... ‚è≥';

            const token = localStorage.getItem('token');
            try {
                const response = await fetch('/api/create-questionnaire', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({ title, description, questions })
                });

                const result = await response.json();
                if (result.success) {
                    alert('‚úÖ Survey created successfully!');
                    closeCreateModal();
                    loadSurveys();
                } else {
                    alert('‚ùå Error: ' + result.error);
                }
            } catch (error) {
                alert('‚ùå Network Error: ' + error.message);
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Create Survey üöÄ';
            }
        }

        function shareLink(link) {
            document.getElementById('linkText').textContent = `${window.location.origin}/survey/${link}`;
            document.getElementById('linkModal').classList.add('active');
        }

        function closeLinkModal() {
            document.getElementById('linkModal').classList.remove('active');
        }

        function copyLink() {
            const text = document.getElementById('linkText').textContent;
            navigator.clipboard.writeText(text).then(() => {
                const btn = event.target;
                const originalText = btn.textContent;
                btn.textContent = '‚úì Copied!';
                btn.style.background = 'linear-gradient(135deg, #10b981 0%, #059669 100%)';
                setTimeout(() => {
                    btn.textContent = originalText;
                    btn.style.background = '';
                }, 2000);
            });
        }

        async function sendViaEmail() {
            const emailString = document.getElementById('recipientEmails').value;
            const link = document.getElementById('linkText').textContent;
            const emails = emailString.split(',').map(email => email.trim()).filter(email => email.length > 0 && email.includes('@'));

            if (emails.length === 0) {
                alert('‚ö†Ô∏è Please enter at least one valid email address.');
                return;
            }

            if (emails.length > 10) {
                alert('‚ö†Ô∏è You can only send to a maximum of 10 emails at a time.');
                return;
            }

            const submitBtn = document.querySelector('#linkModal .submit-btn');
            submitBtn.disabled = true;
            submitBtn.textContent = 'Sending... üìß';

            const token = localStorage.getItem('token');
            try {
                const response = await fetch('/api/send-survey-link', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify({ surveyLink: link, recipientEmails: emails })
                });

                const result = await response.json();
                if (result.success) {
                    alert(`‚úÖ Survey link sent to ${emails.length} recipients!`);
                    document.getElementById('recipientEmails').value = '';
                    closeLinkModal();
                } else {
                    alert('‚ùå Error: ' + result.error);
                }
            } catch (error) {
                alert('‚ùå Error: ' + error.message);
            } finally {
                submitBtn.disabled = false;
                submitBtn.textContent = 'Send to All Recipients üì®';
            }
        }

        async function viewResults(surveyId) {
            window.location.href = `/results/${surveyId}`;
        }
    </script>
