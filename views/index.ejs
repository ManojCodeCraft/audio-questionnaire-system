      font-size: 34px;
      margin-bottom: 16px;
      color: #1f2937;
    }

    .section-sub {
      text-align: center;
      color: #6b7280;
      font-size: 16px;
      max-width: 580px;
      margin: 0 auto 56px;
      line-height: 1.6;
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 28px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .feature-card {
      padding: 32px 28px;
      border-radius: 14px;
      background: #f8fafc;
      border: 1px solid #e5e7eb;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .feature-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 4px;
      height: 100%;
      background: linear-gradient(135deg, #0f4c81, #1e6db5);
      border-radius: 4px 0 0 4px;
    }

    .feature-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 16px 32px rgba(0, 0, 0, 0.1);
      border-color: #1e6db5;
    }

    .feature-icon {
      font-size: 42px;
      margin-bottom: 18px;
    }

    .feature-card h3 {
      font-size: 20px;
      margin-bottom: 12px;
      color: #1f2937;
    }

    .feature-card p {
      color: #6b7280;
      line-height: 1.65;
      font-size: 15px;
    }

    /* ‚îÄ‚îÄ HOW IT WORKS ‚îÄ‚îÄ */
    .how-it-works {
      padding: 90px 50px;
      background: #f0f5fb;
    }

    .steps {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 24px;
      max-width: 1200px;
      margin: 0 auto;
      position: relative;
    }

    .step {
      text-align: center;
      padding: 32px 22px;
      background: white;
      border-radius: 14px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
      transition: all 0.3s ease;
    }

    .step:hover {
      transform: translateY(-6px);
      box-shadow: 0 10px 24px rgba(0, 0, 0, 0.1);
    }

    .step-number {
      width: 56px;
      height: 56px;
      background: linear-gradient(135deg, #0f4c81 0%, #1e6db5 100%);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 22px;
      font-weight: 700;
      margin: 0 auto 18px;
    }

    .step h3 {
      font-size: 18px;
      margin-bottom: 10px;
      color: #1f2937;
    }

    .step p {
      color: #6b7280;
      line-height: 1.6;
      font-size: 14px;
    }

    /* ‚îÄ‚îÄ ROLES ‚îÄ‚îÄ */
    .roles {
      padding: 90px 50px;
      background: white;
    }

    .roles-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 28px;
      max-width: 1000px;
      margin: 0 auto;
    }

    .role-card {
      padding: 36px 30px;
      border-radius: 14px;
      text-align: center;
      border: 2px solid transparent;
      transition: all 0.3s ease;
    }

    .role-card.citizen {
      background: #eff6ff;
      border-color: #bfdbfe;
    }

    .role-card.authority {
      background: #f0fdf4;
      border-color: #bbf7d0;
    }

    .role-card.admin {
      background: #fff7ed;
      border-color: #fed7aa;
    }

    .role-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 28px rgba(0, 0, 0, 0.1);
    }

    .role-icon {
      font-size: 52px;
      margin-bottom: 16px;
    }

    .role-card h3 {
      font-size: 22px;
      margin-bottom: 10px;
    }

    .role-card.citizen h3 {
      color: #1d4ed8;
    }

    .role-card.authority h3 {
      color: #16a34a;
    }

    .role-card.admin h3 {
      color: #ea580c;
    }

    .role-card p {
      color: #6b7280;
      line-height: 1.65;
      font-size: 14px;
      margin-bottom: 16px;
    }

    .role-tag {
      display: inline-block;
      padding: 5px 14px;
      border-radius: 20px;
      font-size: 12px;
      font-weight: 700;
      margin: 3px;
    }

    .citizen .role-tag {
      background: #dbeafe;
      color: #1d4ed8;
    }

    .authority .role-tag {
      background: #dcfce7;
      color: #16a34a;
    }

    .admin .role-tag {
      background: #ffedd5;
      color: #ea580c;
    }

    /* ‚îÄ‚îÄ SLA SECTION ‚îÄ‚îÄ */
    .sla-section {
      padding: 90px 50px;
      background: linear-gradient(135deg, #0f4c81 0%, #1e6db5 100%);
      color: white;
    }

    .sla-section h2,
    .sla-section .section-label {
      color: white;
    }

    .sla-section .section-label {
      opacity: 0.7;
    }

    .sla-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 24px;
      max-width: 1100px;
      margin: 0 auto;
    }

    .sla-card {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-radius: 14px;
      padding: 28px 24px;
      text-align: center;
      transition: all 0.3s ease;
    }

    .sla-card:hover {
      background: rgba(255, 255, 255, 0.17);
      transform: translateY(-4px);
    }

    .sla-card .icon {
      font-size: 38px;
      margin-bottom: 14px;
    }

    .sla-card h4 {
      font-size: 18px;
      margin-bottom: 10px;
    }

    .sla-card p {
      font-size: 14px;
      opacity: 0.8;
      line-height: 1.6;
    }

    /* ‚îÄ‚îÄ ISSUE TYPES ‚îÄ‚îÄ */
    .issue-types {
      padding: 80px 50px;
      background: #f8fafc;
    }

    .issue-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: 18px;
      max-width: 1000px;
      margin: 0 auto;
    }

    .issue-chip {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 18px 20px;
      background: white;
      border-radius: 12px;
      border: 1px solid #e5e7eb;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
      transition: all 0.3s ease;
      font-weight: 600;
      font-size: 14px;
      color: #374151;
    }

    .issue-chip:hover {
      border-color: #1e6db5;
      color: #1e6db5;
      transform: translateY(-3px);
      box-shadow: 0 8px 18px rgba(0, 0, 0, 0.1);
    }

    .issue-chip span {
      font-size: 26px;
    }

    /* ‚îÄ‚îÄ CTA ‚îÄ‚îÄ */
    .cta-section {
      padding: 90px 50px;
      background: #1f2937;
      color: white;
      text-align: center;
    }

    .cta-section p {
      font-size: 18px;
      margin-bottom: 40px;
      opacity: 0.8;
      max-width: 560px;
      margin-left: auto;
      margin-right: auto;
    }

    /* ‚îÄ‚îÄ FOOTER ‚îÄ‚îÄ */
    .footer {
      background: #111827;
      color: white;
      padding: 40px 50px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 20px;
    }

    .footer-logo {
      font-size: 18px;
      font-weight: 700;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .footer p {
      opacity: 0.55;
      font-size: 14px;
    }

    .footer-links {
      display: flex;
      gap: 20px;
    }

    .footer-links a {
      color: rgba(255, 255, 255, 0.55);
      text-decoration: none;
      font-size: 14px;
    }

    .footer-links a:hover {
      color: white;
    }

    @media (max-width: 768px) {
      .navbar {
        padding: 14px 20px;
      }

      .hero {
        padding: 60px 20px;
      }

      .hero h1 {
        font-size: 28px;
      }

      .hero p {
        font-size: 16px;
      }

      .stats-banner {
        gap: 30px;
        padding: 24px 20px;
      }

      .features,
      .how-it-works,
      .roles,
      .sla-section,
      .issue-types,
      .cta-section {
        padding: 60px 20px;
      }

      .footer {
        flex-direction: column;
        text-align: center;
        padding: 30px 20px;
      }
    }
  </style>
</head>

