      gap: 16px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .cta-button {
      display: inline-block;
      padding: 15px 36px;
      background: #f59e0b;
      color: #1f2937;
      border-radius: 8px;
      font-weight: 700;
      font-size: 16px;
      text-decoration: none;
      transition: all 0.3s ease;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.2);
    }

    .cta-button:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 28px rgba(0, 0, 0, 0.3);
    }

    .cta-outline {
      display: inline-block;
      padding: 15px 36px;
      background: transparent;
      color: white;
      border: 2px solid rgba(255, 255, 255, 0.4);
      border-radius: 8px;
      font-weight: 600;
      font-size: 16px;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .cta-outline:hover {
      background: rgba(255, 255, 255, 0.1);
    }

    /* ‚îÄ‚îÄ STATS BANNER ‚îÄ‚îÄ */
    .stats-banner {
      background: #f59e0b;
      padding: 28px 50px;
      display: flex;
      justify-content: center;
      gap: 60px;
      flex-wrap: wrap;
    }

    .stat {
      text-align: center;
    }

    .stat-number {
      font-size: 28px;
      font-weight: 800;
      color: #1f2937;
    }

    .stat-label {
      font-size: 13px;
      color: #78350f;
      font-weight: 600;
      margin-top: 2px;
    }

    /* ‚îÄ‚îÄ FEATURES ‚îÄ‚îÄ */
